#!/usr/bin/env bash

CONFIG="config.mk"

if [ -z "$CC" ]; then
  CC="gcc"
fi

PNGQUANT_OPTS=""
for i in "$@"; do
  case $i in
    -L*)
      LDFLAGS="$LDFLAGS $1"
      ;;
    -I*)
      CFLAGS="$CFLAGS $1"
      ;;
    "--with-debug")
      PNGQUANT_OPTS="$PNGQUANT_OPTS --enable-debug"
      CFLAGS="$CFLAGS -g -MMD -DDEBUG"
      ;;
    *)
      echo "Unrecognized option '$1'."
      exit 1
  esac

  shift
done

CFLAGS="$CFLAGS -O3 -Wall -std=c99"
LDFLAGS="$LDFLAGS src/pngquant/lib/libimagequant.a -lpng -ljpeg -lz -lm -llcms2"

if [[ $OSTYPE =~ "darwin" ]]; then
  :
elif [[ $OSTYPE =~ "linux" ]]; then
  LDFLAGS="$LDFLAGS -ldl"
  CFLAGS="$CFLAGS -D_BSD_SOURCE"
else
  :
fi


cd src/pngquant
./configure $PNGQUANT_OPTS --without-cocoa
cd -

echo "CC=$CC" > $CONFIG
echo "LDFLAGS=$LDFLAGS" >> $CONFIG
echo "CFLAGS=$CFLAGS" >> $CONFIG
